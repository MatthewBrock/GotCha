<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OutlineButtonStyle">
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/button_text_color</item>/>
    </style>

    <style name="FullButtonStyle">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/gotcha_white</item>/>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gotcha_white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/gotcha_white</item>
        <item name="colorControlNormal">@color/gotcha_white</item>
        <item name="colorControlActivated">@color/gotcha_white</item>
    </style>

</resources>
