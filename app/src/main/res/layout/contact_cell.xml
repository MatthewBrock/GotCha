<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <View
        android:id="@+id/touchable_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/like_image" />

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/img_noprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/contact_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Jimbo Joe" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Met Dec 18, 2018"
        app:layout_constraintLeft_toRightOf="@id/contact_image"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:id="@+id/like_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginRight="34dp"
        android:src="@drawable/btn_fav_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divider"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>